<h1>CART</h1>

<div id="card">
{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>name</th>
                <th>amount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button 
                    class="btn btn-small js-remove" 
                    data-id="{{id}}"
                    data-csrf="{{@root.csrf}}"
                    >
                    remove</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>price:</strong><span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type="submit" class="btn">Make an order</button>
    </form>
{{else}}
<p>the cart is empty</p>
{{/if}}
</div>